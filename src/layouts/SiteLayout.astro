---
const {
  title = "SizeMyGenerator",
  desc = "Size My Generator — simple generator sizing calculator to help you pick a safe standby generator for your home.",
  canonical,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={desc} />
    {canonical && <link rel="canonical" href={canonical} />}
    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>
  <body>
    <header class="site-header">
      <div class="site-header-inner">
        <a href="/" class="brand">
          <img src="/logo.png" alt="SizeMyGenerator logo" class="brand-logo" />
          <span class="brand-text">SizeMyGenerator</span>
        </a>

        <!-- Mobile menu button -->
        <button
          class="mobile-nav-toggle"
          type="button"
          aria-label="Toggle navigation"
          aria-expanded="false"
          aria-controls="primary-nav"
        >
          ☰
        </button>

        <nav class="site-nav" aria-label="Primary" id="primary-nav">
          <a href="/#calculator" class="nav-link">Calculator</a>

          <div class="nav-link nav-link-dropdown">
            <span>Guides ▾</span>
            <div class="nav-dropdown-menu">
              <a href="/generator-sizing-guide" class="nav-dropdown-item">
                Generator sizing guide
              </a>
              <a href="/200-amp-generator-size" class="nav-dropdown-item">
                200 amp generator size
              </a>
              <a href="/transfer-switch-vs-interlock" class="nav-dropdown-item">
                Transfer switch vs. interlock
              </a>
              <a href="/well-pump-starting-watts" class="nav-dropdown-item">
                Well pump starting watts
              </a>
            </div>
          </div>

          <a href="/#faqs" class="nav-link">FAQs</a>
          <a href="/about" class="nav-link">About</a>
          <a href="/contact" class="nav-link">Contact</a>

          <a href="/#calculator" class="nav-cta">
            Open Calculator
          </a>
        </nav>
      </div>
    </header>

    <main class="site-main">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="site-footer-inner">
        <p class="footer-copy">
          © {new Date().getFullYear()} SizeMyGenerator. All rights reserved.
        </p>
        <div class="footer-links">
          <a href="/privacy">Privacy</a>
          <a href="/disclaimer">Disclaimer</a>
          <a href="/affiliate-disclosure">Affiliate disclosure</a>
          <a href="/terms">Terms</a>
        </div>
      </div>
    </footer>

    <script>
      // Simple mobile nav toggle
      document.addEventListener("DOMContentLoaded", () => {
        const btn = document.querySelector(".mobile-nav-toggle");
        const nav = document.querySelector(".site-nav");
        if (!btn || !nav) return;

        btn.addEventListener("click", () => {
          const isOpen = nav.classList.toggle("is-open");
          btn.setAttribute("aria-expanded", isOpen ? "true" : "false");
        });
      });
    </script>

    <style is:global>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          Oxygen, Ubuntu, Cantarell, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        color: #e5e7eb; /* light text by default for purple background */
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      /* ---------- Header / nav ---------- */

      .site-header {
        position: sticky;
        top: 0;
        z-index: 40;
        backdrop-filter: blur(10px);
        background: rgba(148, 163, 253, 0.9);
        border-bottom: 1px solid rgba(148, 163, 253, 0.5);
      }

      .site-header-inner {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0.5rem 1.25rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: relative;
      }

      .brand {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
      }

      .brand-logo {
        width: 32px;
        height: 32px;
      }

      .brand-text {
        font-weight: 700;
        font-size: 1.1rem;
        color: #16a34a;
      }

      .mobile-nav-toggle {
        display: none;
        margin-left: auto;
        padding: 0.25rem 0.7rem;
        border-radius: 999px;
        border: 1px solid rgba(15, 23, 42, 0.3);
        background: rgba(239, 246, 255, 0.9);
        font-size: 1.1rem;
        cursor: pointer;
      }

      .site-nav {
        display: flex;
        align-items: center;
        gap: 1.25rem;
        font-size: 0.95rem;
      }

      .nav-link {
        position: relative;
        font-weight: 500;
        color: #0f172a;
        opacity: 0.9;
      }

      .nav-link::after {
        content: "";
        position: absolute;
        left: 0;
        right: 0;
        bottom: -0.25rem;
        height: 2px;
        border-radius: 999px;
        background: rgba(15, 23, 42, 0.7);
        transform: scaleX(0);
        transform-origin: center;
        transition: transform 0.18s ease;
      }

      .nav-link:hover::after {
        transform: scaleX(1);
      }

      .nav-link-dropdown {
        position: relative;
        cursor: default;
      }

      .nav-dropdown-menu {
        position: absolute;
        top: 115%;
        left: 0;
        min-width: 220px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 12px 35px rgba(15, 23, 42, 0.18);
        padding: 0.5rem 0;
        display: none;
        z-index: 50;
      }

      .nav-link-dropdown:hover .nav-dropdown-menu {
        display: block;
      }

      .nav-dropdown-item {
        display: block;
        padding: 0.45rem 0.9rem;
        font-size: 0.9rem;
        color: #111827;
      }

      .nav-dropdown-item:hover {
        background: #eef2ff;
      }

      .nav-cta {
        padding: 0.4rem 1rem;
        border-radius: 999px;
        background: #22c55e;
        color: #022c22;
        font-weight: 700;
        font-size: 0.9rem;
        box-shadow: 0 8px 18px rgba(22, 163, 74, 0.5);
        border: 2px solid rgba(22, 163, 74, 0.2);
      }

      .nav-cta:hover {
        filter: brightness(1.05);
        transform: translateY(-1px);
        box-shadow: 0 10px 24px rgba(22, 163, 74, 0.65);
      }

      .site-main {
        min-height: calc(100vh - 140px);
      }

      /* ---------- Footer ---------- */

      .site-footer {
        padding: 1.5rem 1.25rem 2rem;
        background: rgba(15, 23, 42, 0.12);
        margin-top: 1.5rem;
      }

      .site-footer-inner {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem 1.5rem;
        align-items: center;
        justify-content: space-between;
        color: rgba(241, 245, 249, 0.9);
        font-size: 0.85rem;
      }

      .footer-links {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
      }

      .footer-links a {
        opacity: 0.9;
      }

      .footer-links a:hover {
        text-decoration: underline;
      }

      /* ---------- Home page hero + calculator shell ---------- */

      .home-shell {
        display: flex;
        flex-direction: column;
      }

      .home-hero {
        padding: 2.75rem 1.5rem 2rem;
        color: #f9fafb;
      }

      .home-hero-inner {
        max-width: 1200px;
        margin: 0 auto;
        text-align: center; /* center H1 and both subheadings */
      }

      .home-hero-title {
        display: flex; /* bolt + text on one row */
        justify-content: center;
        align-items: center;
        gap: 0.6rem;
        font-size: clamp(2.6rem, 4vw, 3.4rem);
        font-weight: 800;
        letter-spacing: -0.03em;
        line-height: 1.05;
      }

      .home-hero-bolt {
        font-size: clamp(2.2rem, 3vw, 2.8rem);
      }

      .home-hero-subtitle,
      .home-hero-meta {
        max-width: 44rem;
        margin-left: auto;
        margin-right: auto;
      }

      .home-hero-subtitle {
        font-size: 1.1rem;
        margin-top: 0.9rem;
        margin-bottom: 0.35rem;
      }

      .home-hero-meta {
        font-size: 0.95rem;
        opacity: 0.9;
      }

      .home-calculator-shell {
        padding: 0 1.5rem 2.5rem;
      }

      .home-calculator-shell > * {
        max-width: 1200px;
        margin: 0 auto;
      }

      /* ---------- Shared content-page styling (About, Contact, Terms…) ---------- */

      .page-hero {
        max-width: 960px;
        margin: 0 auto;
        padding: 2.5rem 1.5rem 1.25rem;
        color: #f9fafb;
      }

      .page-hero h1 {
        font-size: clamp(2rem, 3vw, 2.4rem);
        margin-bottom: 0.4rem;
      }

      .page-hero .lead {
        max-width: 42rem;
        font-size: 1.02rem;
        line-height: 1.6;
        color: #e5e7eb;
      }

      .page-main,
      .prose {
        max-width: 760px;
        margin: 0 auto;
        padding: 0 1.5rem 2.5rem;
        line-height: 1.7;
        color: #f9fafb;
      }

      .prose h1,
      .prose h2,
      .prose h3,
      .prose h4 {
        color: #f9fafb;
      }

      .prose h1 {
        font-size: clamp(2rem, 3vw, 2.4rem);
        margin-bottom: 0.5rem;
      }

      .prose h2 {
        margin-top: 1.5rem;
        margin-bottom: 0.35rem;
        font-size: 1.25rem;
      }

      .prose p {
        margin: 0.4rem 0;
      }

      .prose ul {
        padding-left: 1.25rem;
        margin: 0.5rem 0;
      }

      .prose li {
        margin: 0.25rem 0;
      }

      .prose a,
      .page-main a {
        color: #bfdbfe;
        text-decoration: underline;
        text-decoration-thickness: 1.5px;
        text-underline-offset: 2px;
      }

      .muted {
        color: rgba(226, 232, 240, 0.78);
      }

      /* Cards & forms reused on content pages */

      .card {
        background: rgba(15, 23, 42, 0.78);
        border-radius: 12px;
        border: 1px solid rgba(148, 163, 253, 0.55);
        box-shadow: 0 10px 30px rgba(15, 23, 42, 0.45);
        padding: 1.1rem 1.25rem;
        margin-bottom: 1.1rem;
      }

      .card h2 {
        margin-bottom: 0.35rem;
      }

      .form {
        display: grid;
        grid-template-columns: 1fr;
        gap: 0.6rem;
        margin-top: 0.4rem;
      }

      .form label {
        font-weight: 600;
      }

      .form input,
      .form select,
      .form textarea {
        width: 100%;
        padding: 0.65rem 0.75rem;
        border: 1px solid #cfd6df;
        border-radius: 8px;
        font-size: 1rem;
        background: #ffffff;
        color: #020617;
      }

      .form button {
        margin-top: 0.5rem;
        border: 1px solid #16a34a;
        background: #22c55e;
        color: #022c22;
        font-weight: 700;
        padding: 0.7rem 1rem;
        border-radius: 0.6rem;
        cursor: pointer;
      }

      .form button:hover {
        filter: brightness(1.05);
      }

      .help {
        font-size: 0.9rem;
        margin: 0.25rem 0 0;
        color: rgba(226, 232, 240, 0.85);
      }

      .notice {
        max-width: 760px;
        margin: 0.75rem auto 0;
        background: rgba(22, 163, 74, 0.1);
        border: 1px solid rgba(74, 222, 128, 0.8);
        padding: 0.75rem 1rem;
        border-radius: 10px;
        color: #ecfdf3;
      }

      /* ---------- Responsive tweaks ---------- */

      @media (max-width: 768px) {
        .site-header-inner {
          padding-inline: 1rem;
        }

        .mobile-nav-toggle {
          display: inline-flex;
        }

        .site-nav {
          position: absolute;
          top: 100%;
          right: 0;
          left: 0;
          background: rgba(148, 163, 253, 0.98);
          border-bottom: 1px solid rgba(129, 140, 248, 0.5);
          flex-direction: column;
          align-items: flex-start;
          gap: 0.6rem;
          padding: 0.75rem 1rem 1rem;
          font-size: 0.95rem;
          display: none;
        }

        .site-nav.is-open {
          display: flex;
        }

        .nav-link::after {
          display: none; /* keep mobile menu clean */
        }

        /* Make Guides submenu always visible and stacked on mobile */
        .nav-link-dropdown {
          width: 100%;
        }

        .nav-link-dropdown > span {
          display: block;
          font-weight: 600;
          margin-bottom: 0.25rem;
        }

        .nav-dropdown-menu {
          position: static;
          box-shadow: none;
          background: transparent;
          padding: 0;
          display: block;
          margin-left: 0.75rem;
        }

        .nav-dropdown-item {
          padding: 0.25rem 0;
        }

        .nav-cta {
          margin-top: 0.5rem;
        }

        .home-hero {
          padding: 2.25rem 1.1rem 1.5rem;
        }

        .home-calculator-shell {
          padding: 0 1.1rem 2rem;
        }

        .site-footer {
          padding-inline: 1.1rem;
        }

        .page-hero {
          padding: 2.25rem 1.1rem 1.1rem;
        }

        .page-main,
        .prose {
          padding: 0 1.1rem 2.25rem;
        }
      }
    </style>
  </body>
</html>
